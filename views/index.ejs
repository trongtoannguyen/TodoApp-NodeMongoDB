<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
  <%- include('./partials/header.ejs') %>
    <div class="container">
      <div class="todo-app">
        <h2 class="d-flex align-items-center">Todo List<img src="./images/logo.png" alt="todo-logo"></h2>
        <div class="row">
          <form action="/todos" method="POST" id="todo-form">
            <input type="text" name="todo" id="input-box" placeholder="Add your text" autofocus>
            <button id="add-task" type="submit">Add</button>
          </form>
        </div>
        <ul id="list-container" class="list-group">
          <% todos.forEach(todo=> { %>
            <li
              class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-primary">
              <%= todo.todo %>
                <a href="/delete/todo/<%= todo._id %>" class="btn btn-danger btn-sm">Delete</a>
                <% }) %>
            </li>
        </ul>
      </div>
    </div>
    <%- include('./partials/footer.ejs') %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>